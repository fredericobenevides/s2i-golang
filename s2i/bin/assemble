#!/bin/bash -e
#
# S2I assemble script for the 'golang' image.
# The 'assemble' script builds your application source so that it is ready to run.
#
# For more information refer to the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

# If the 'golang' assemble script is executed with the '-h' flag, print the usage.
if [[ "$1" == "-h" ]]; then
	exec /usr/local/s2i/usage
fi

echo "---> Installing application source..."

# Move the envioronment file to s2i folder
env_openshift="env_openshift.sh"
mv /tmp/src/${env_openshift} /go/src/

# Load environment APP_FOLDER
. /go/src/${env_openshift}

# Create the app's folder
cd /tmp/src
mkdir -p ${APP_FOLDER}

# Move all the files to app's folder except the app folder.
find . -maxdepth 1 -mindepth 1 -not -name ${APP_ROOT_FOLDER} -print0 | xargs -0 mv -t ${APP_FOLDER}

# Move the app's folder to go's folder
mv /tmp/src/${APP_ROOT_FOLDER} /go/src

echo "---> Building application from source..."

